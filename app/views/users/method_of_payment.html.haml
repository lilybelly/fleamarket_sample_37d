%body
  .single-container
    .single-header
      %h1
        %a{href: "https://www.mercari.com/jp/"}
          %img{alt: "mercari", src: "//www-mercari-jp.akamaized.net/assets/img/common/common/logo.svg?1098098883"}/
      %nav.progress-bar.signup-bar
        %ol.clearfix
          %li
            会員情報
            .pay-progress-status-fist
          %li
            電話番号認証
            .pay-progress-status-2nd
          %li
            住所入力
            .pay-progress-status-3rd
          %li.active
            支払い方法
            .pay-progress-status-4th
          %li
            完了
            .pay-progress-status-last
    .single-main
      .l-single-container
        %h2.l-single-head 支払い方法
        .l-single-inner
          .l-single-content
            .form-group-registration
              %label{for: "fullname"} カード番号
              %span.form-require 必須
              %input.input-default{name: "kanji-first-name", placeholder: "例）半角英数のみ", type: "string", value: ""}/
            .form-group-registration
              %label{for: "date"} 有効期限
              %span.form-require 必須
              = render 'expiration_date'
              = render 'expiration_year'
            .form-group-registration
              %label{for: "detail-address"} セキュリティコード
              %span.form-require 必須
              %input.input-default{name: "detail-address", placeholder: "カードの背面もしくは３桁の番号", type: "text", value: ""}/
            .form-group-registration
              %a{:href => "/users/sign_up/6"}
                %button.btn-default.btn-red{type: "submit"} 次へ進む

      = render 'devise/shared/registration-footer'
