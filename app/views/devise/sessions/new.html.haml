
%body
  .single-container
    .single-header
      %h1
        %a{href: "https://www.mercari.com/jp/"}
          %img{alt: "mercari", src: "//www-mercari-jp.akamaized.net/assets/img/common/common/logo.svg?2960600120"}/
    .single-main
      .login-panel
        .login-no-account
          %p アカウントをお持ちでない方はこちら
          %a{href: "https://www.mercari.com/jp/signup/?after_save_callback=https%3A%2F%2Fwww.mercari.com%2Fjp%2F"} 新規会員登録
        .login-form-inner
          %button#facebook-login.btn-default.btn-sns.btn-sns-facebook
            %i.icon-facebook
            Facebookでログイン
          %button#google-login.btn-default.btn-sns.btn-sns-google
            %i.icon-google-plus
            Googleでログイン


        %form{action: "https://www.mercari.com/jp/login/", method: "POST", novalidate: "novalidate"}
          .login-form-inner
            .form-group
            = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
              .field
                = f.email_field :email, autofocus: true, autocomplete: "email",style: ' width: 100%; height: 100%; style="font-size:50px;',placeholder: 'メールアドレス',size: 100
              .field
                = f.password_field :password, autocomplete: "current-password",autocomplete: "password",style: 'width: 100%;height: 100%;',placeholder: 'パスワード'
            .form-group-grecap
              .g-recaptcha.login-captcha{data:{sitekey: "6LfZGCYTAAAAAHoK-s7Lg5OdYg5Fq4susvALmZoc"}}
                %div{style: "width: 304px; height: 78px;"}
                  %div
                    %iframe{frameborder: "0", height: "78", name: "a-at0g0v2thzo7", role: "presentation", sandbox: "allow-forms allow-popups allow-same-origin allow-scripts allow-top-navigation allow-modals allow-popups-to-escape-sandbox", scrolling: "no", src: "https://www.google.com/recaptcha/api2/anchor?ar=1&k=6LfZGCYTAAAAAHoK-s7Lg5OdYg5Fq4susvALmZoc&co=aHR0cHM6Ly93d3cubWVyY2FyaS5jb206NDQz&hl=ja&v=v1540189908068&size=normal&cb=3g1gbk7idoum", width: "304"}
                  %textarea#g-recaptcha-response.g-recaptcha-response{name: "g-recaptcha-response", style: "width: 250px; height: 40px; border: 1px solid rgb(193, 193, 193); margin: 10px 25px; padding: 0px; resize: none; display: none;"}
            %button.login-submit.btn-default.btn-red{type: "submit"} ログイン
            %input{name: "login_callback", type: "hidden", value: "https://www.mercari.com/jp/"}/
            %input{name: "__csrf_value", type: "hidden", value: "bd82cd6eb7ff05d22f486c0319a5364d13613ce3fab63bf8eff90e1411df976ed011fd54ea2d0379bb4eb0982df9f16a78cf82fc774244c45dbfa9286be78f15d"}/
            %a.pass-reset{href: "https://www.mercari.com/jp/password/reset/start/"} パスワードをお忘れの方
  = render 'devise/shared/registration-footer'
